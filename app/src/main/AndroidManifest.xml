<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.royalapp">
    <!-- 03 configurar para meu app acesar dados fora da internetd -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 03 Libera travas de red -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/Theme.RoyalApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".NovaTransferenciaActivity"
            android:exported="true"
            android:parentActivityName=".Dashboard"/>
        <activity
            android:name=".Dashboard"
            android:exported="true"
            android:launchMode="singleInstance">
        </activity>
        <activity
            android:name=".SenhaConfirmada"
            android:exported="true"
            android:launchMode="singleTop" />
        <activity
            android:name=".AlterarSenha"
            android:exported="true"
            android:launchMode="singleTop"
            android:parentActivityName=".InserirCodigo" />
        <activity
            android:name=".InserirCodigo"
            android:exported="true"
            android:launchMode="singleTop"
            android:parentActivityName=".LoginUsuario" />
        <activity
            android:name=".InsercaoEmail"
            android:exported="true"
            android:launchMode="singleTop"
            android:parentActivityName=".LoginUsuario" />
        <activity
            android:name=".LoginUsuario"
            android:exported="true"
            android:launchMode="singleTop">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CadastroUsuario"
            android:exported="true"
            android:launchMode="singleTop"
            android:parentActivityName=".LoginUsuario" />
    </application>

</manifest>