<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SenhaConfirmada">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="32dp"
            android:paddingEnd="32dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Royal | Finance"
                android:textColor="#2A356A"
                android:textSize="20dp"
                android:fontFamily="@font/baskervville_regular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:textColor="@color/black"
                android:text="Senha modificada com sucesso!"
                android:textSize="20dp"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="313dp"
                android:layout_marginTop="-23dp"
                android:scaleType="centerCrop"
                android:src="@drawable/verificado"/>

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/senha_confirmada"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                />




            <Button
                android:id="@+id/btnVoltarLogin"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text="Voltar Login"
                android:layout_marginTop="80dp"
                android:textSize="10dp"

                app:icon="@drawable/seta"/>













        </LinearLayout>







    </ScrollView>



</RelativeLayout>